generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  first_name String @db.VarChar(15)
  last_name String @db.VarChar(15)
  email String @unique @db.VarChar(30)
  nic String @unique @db.VarChar(15)
  contact String @unique @db.VarChar(12)
  password String @db.VarChar(255)
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @updatedAt
  Profile Profile?
}

model Profile {
  id Int @id @default(autoincrement())
  profile String? @db.VarChar(255)
  userId Int @unique(map:"userId")
  User User @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Profile_ibfk_1")
}